{
  "name": "bootstrap",
  "version": "1.0.0",
  "main": "main.ts",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "swc src -d dist",
    "build-dev": "npm run build && NODE_ENV=development node --inspect dist/main.js",
    "dev": "nodemon --ext ts --exec \"npm run build-dev\"",
    "start": "npm run build && NODE_ENV=production node dist/main.js",
    "format": "eslint src/**/*.ts --fix",
    "test": "uvu -r esm src/tests"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.4",
    "@prisma/client": "3.3.0",
    "@tinyhttp/app": "^2.0.12",
    "@tinyhttp/cors": "^2.0.0",
    "@tinyhttp/logger": "^1.3.0",
    "@tinyhttp/swagger": "^0.1.1",
    "argon2": "^0.28.2",
    "dotenv": "^10.0.0",
    "formidable": "^2.0.1",
    "milliparsec": "^2.2.0",
    "node-cache": "^5.1.2",
    "sirv": "^1.0.18",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.51",
    "@swc/core": "^1.2.105",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "axios": "^0.24.0",
    "eslint": "^8.1.0",
    "eslint-config-xo": "^0.39.0",
    "esm": "^3.2.25",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "nanoid": "^3.1.30",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "prisma": "3.3.0",
    "typescript": "^4.4.4",
    "uvu": "^0.5.2",
    "xo": "^0.46.3"
  },
  "lint-staged": {
    "*.ts": [
      "yarn format",
      "git add"
    ]
  }
}
