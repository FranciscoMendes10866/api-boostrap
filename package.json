{
  "name": "swc-ts",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm watch-compile\" \"pnpm watch-dev\"",
    "watch-compile": "swc src -w --out-dir dist",
    "watch-dev": "nodemon --watch \"dist/**/*\" -e js --exec \"node --experimental-specifier-resolution=node\" ./dist/main.js",
    "build": "swc src -d dist",
    "start": "NODE_ENV=production node --experimental-specifier-resolution=node dist/main.js",
    "clean": "rm -rf dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.164",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.23",
    "chokidar": "^3.5.3",
    "concurrently": "^7.1.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "express": "^4.17.3"
  }
}
